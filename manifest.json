{
   "name": "HandyTD",
   "background_page": "background.html",
   "options_page": "options.html",

   "content_scripts": [ {
      "all_frames": false,
      "js": [ "helpers.js", "date.js", "timezone.js", "contentscript.js" ],
      "matches": [ "http://*/*", "https://*/*" ],
      "run_at": "document_idle"
   } ],
   "description": "Convert times and dates on any web page to user's time zone (with respect to daylight saving time) and format.",
   "icons": {
      "16": "clock.png"
   },
   "page_action": {
      "default_icon": "clock.png",
      "default_title": "On-page time zone conversion and time/date formatting",
      "popup": "popup.html"
   },
   "permissions": [ "tabs", "http://*/*", "https://*/*" ],
   "version": "0.0.1"
}
